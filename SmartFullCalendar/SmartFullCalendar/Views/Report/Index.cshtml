@model SmartFullCalendar.Models.ListViewModel<SmartFullCalendar.Models.Event>
@using SmartFullCalendar.Helpers
@{
    ViewBag.Title = "Index";
}

<h2>Your events</h2>
<dl class="dl-horizontal ">
    
    <dt class="zero">From &nbsp;</dt>
    <dd class="zero">@Model.ShortStartDateString</dd>

    <dt class="zero">To: &nbsp;</dt>
    <dd class="zero">@Model.ShortEndDateString</dd>
</dl> 
    

@foreach (var ev in Model.List)
{
    @Html.Partial("_EventRowPartial", ev)
}

<div>
    <div class="nav">
        <div class="pull-right">
            @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", "Report", new { page = x, startISO = Model.StartISO, endISO = Model.EndISO }))
        </div>
    </div>
</div>

