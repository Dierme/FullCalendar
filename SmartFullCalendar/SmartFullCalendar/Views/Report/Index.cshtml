@model SmartFullCalendar.Models.ListViewModel<SmartFullCalendar.Models.Event>
@using SmartFullCalendar.Helpers
@{
    ViewBag.Title = "Index";
}

<h2 class="zero">Your events</h2>
<dl class="dl-horizontal zero">    
    <dt class="zero">From &nbsp;</dt>
    <dd class="zero">@Model.ShortStartDateString</dd>

    <dt class="zero">To: &nbsp;</dt>
    <dd class="zero">@Model.ShortEndDateString</dd>
</dl> 
  
<table class="table table-striped table-bordered">
    <thead>
        <tr class="success">
            <th>Title</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Description</th>
            <th>Location</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.DateStart</td>
                <td>@item.DateEnd</td>
                <td>@item.Description</td>
                <td>@item.Location</td>
                <td>@item.Category</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <div class="nav">
        <div class="pull-right">
            @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", "Report", new { page = x, startISO = Model.StartISO, endISO = Model.EndISO }))
        </div>
    </div>
</div>

