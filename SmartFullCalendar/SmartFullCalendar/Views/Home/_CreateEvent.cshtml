<div id="createDialog" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding-left:40%;">
                <button class=" close" data-dismiss="modal" area-hidden="true">
                x</button>
                <h4>Event details</h4>
            </div>
            <div class="modal-body" >              
                <form id="eventCreateForm" class="well" action="api/event/create" method="post" style="margin-bottom:0">

                    <label>Event title*</label>
                    <label class="pull-right"><b>*</b> -<small> required field</small></label>
                    <input type="text" name="Title" class="form-control" id="createTitle" placeholder="Title here">

                    <label>Event description</label>
                    <textarea id="createDescription" class="form-control" name="Description" placeholder="Description here"></textarea>

                    <label>Start date*</label>
                    <div class='input-group date' id='datetimepicker1'>
                        <input type='text' class="form-control" name="DateStart" placeholder="Start date here" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>  

                    <label>End date</label>
                    <div class='input-group date' id='datetimepicker2'>
                        <input type='text' class="form-control" name="DateEnd" placeholder="End date here" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>                    
                                       
                    <input type="hidden" name="DateAdd" id="createDateAdd">

                    <label>Location</label>
                    <input type="text" name="Location" class="form-control" id="createLocation" placeholder="Location here">

                    <label>Category</label>
                    <select data-val="true" class="form-control" data-val-required="The Category field is required."
                            id="createCategory" name="Category">
                        <option selected="selected">Home</option>
                        <option>Business</option>
                        <option>Study</option>
                        <option>Fun</option>
                        <option>Other</option>
                    </select>
                </form>
            </div>
            <div class="modal-footer" style="margin-top:0">
                <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
                <button type="button" id="btnPopupSave" data-dismiss="modal" class="btn btn-primary">Add Event</button>
            </div>
        </div>
    </div>
</div>

