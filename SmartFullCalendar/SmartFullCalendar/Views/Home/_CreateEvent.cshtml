<div id="createDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal" area-hidden="true">x</button>
                <h4>Event details</h4>
            </div>
            <div class="modal-body" >              
                <form id="eventForm" class="well" action="api/event/create" method="post" style="margin-bottom:0">

                    <label>Event title*</label>
                    <input type="text" name="Title" class="form-control" id="Title" placeholder="Title here">

                    <label>Event description</label>
                    <textarea id="Description" class="form-control" name="Description" placeholder="Description here"></textarea>

                    <label>Start date*</label>
                    <input type='text' class="form-control" name="DateStart" id='datetimepicker1' placeholder="Start date here" />

                    <label>End date</label>
                    <input type='text' class="form-control" name="DateEnd" id='datetimepicker2' placeholder="End date here" /> 
                                       
                    <input type="hidden" name="DateAdd">

                    <label>Location</label>
                    <input type="text" name="Location" class="form-control" id="Location" placeholder="Location here">

                    <label>Category</label>
                    <select data-val="true" class="form-control" data-val-required="The Category field is required."
                            id="Category" name="Category">
                        <option selected="selected">Home</option>
                        <option>Business</option>
                        <option>Study</option>
                        <option>Fun</option>
                        <option>Other</option>
                    </select>
                </form>
            </div>
            <div class="modal-footer" style="margin-top:0">
                <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
                <button type="button" id="btnPopupSave" data-dismiss="modal" class="btn btn-primary">Add Event</button>
            </div>
        </div>
    </div>
</div>

