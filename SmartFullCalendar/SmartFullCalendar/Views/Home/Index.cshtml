@{
    ViewBag.Title = "Home Page";
}
<div id="calendar" ></div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
}
@Html.Partial("_EventDetails")
@Html.Partial("_CreateEvent")
@Html.Partial("_EditEvent")
@Html.Partial("_AlarmEvent")
@Html.Partial("_AlertPopup")
@Html.Partial("_AlarmEventPopup")
<hr />

<div class="row">
    <div class="col-md-4">
        <div class='input-group date customInput form-group' id='dateReport1'>
            <input type='text' class="form-control" name="startISO" placeholder="Start date here" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
        <div class='input-group date customInput form-group' id='dateReport2'>
            <input type='text' class="form-control" name="endISO" placeholder="End date here" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>
    <div class="col-md-8" style="padding-top:2%">
        <button type="button" id="btnReport" class="btn btn-success">Generate report</button>
    </div>
</div>
